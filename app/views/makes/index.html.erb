<p id="notice"><%= notice %></p>

<h1>Makes</h1>

<ul>
  <li id="cars"><a href="/cars">Cars</a></li>
  <li id="parts" class="selected"><a href="/parts" class="selected">Parts</a></li>
  <li id="makes"><a href="/makes">Makes</a></li>
</ul>

<table>
  <thead>
  <tr>
    <th>Make</th>
    <th>Country</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @makes.each do |make| %>
    <tr>
      <td><%= make.make %></td>
      <td><%= make.country %></td>
      <td><%= link_to 'Show', make %></td>
      <td><%= link_to 'Edit', edit_make_path(make) %></td>
      <td><%= link_to 'Destroy', make, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= form_tag(search_makes_url, method: "get")do %>
  <%= label_tag(:query, "Search for make(s)") %>
  <%= text_field_tag(:query, params[:query], data: { autocomplete:
                                                         autocomplete_make_make_makes_path}) %>
  <%= submit_tag("Search") %>
<% end %>

<%= link_to 'New Make', new_make_path %>
<%= link_to 'Log out',
            destroy_user_session_path,
            method: :delete %>